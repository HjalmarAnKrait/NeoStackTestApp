<Window x:Class="NeoStackTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeoStackTestApp"
        d:DataContext="{d:DesignInstance Type=local:ApplicationViewModel}"
        mc:Ignorable="d"
        Padding="100"
        Title="MainWindow" Height="450" MinHeight="200" Width="800" MinWidth="400"
        >
    
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <ListBox
            x:Name="functionsListBox" Grid.Column="0" SelectedIndex="0" ItemsSource="{Binding FunctionsList, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedItem="{Binding SelectedFunction}" Background="Lavender">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path = FunctionName}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


        <StackPanel Grid.Column="1">
            <TextBlock Text="{Binding ElementName=functionsListBox, Path = SelectedItem.Function}" x:Name="functionDescription"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="Коэффициент a: "  Grid.Column="0" Grid.Row="0"/>
                <TextBox Width="auto" MaxLength="6" Text="{Binding SelectedFunction.A, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" MinWidth="100"/>
                <TextBlock Text="Коэффициент b: "  Grid.Column="0" Grid.Row="1"/>
                <TextBox Width="auto" MaxLength="6" MinWidth="100" Text="{Binding SelectedFunction.B, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="1" />
            </Grid>

            <ComboBox x:Name="cComboBox" ItemsSource="{Binding CList, UpdateSourceTrigger=PropertyChanged}"
                      SelectedIndex="{Binding ElementName=functionsListBox, Path=SelectedItem.ComboBoxSelectedIndex}"
                      SelectedItem="{Binding ElementName=functionsListBox, Path=SelectedItem.C}"
                      />


            <DataGrid x:Name="functionDataGrid" ItemsSource="{Binding ElementName=functionsListBox, 
                Path=SelectedItem.FunctionArgsModelList}"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="x" Binding="{Binding Path=X, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                    <DataGridTextColumn Header="y" Binding="{Binding Path=Y, UpdateSourceTrigger=PropertyChanged}"  Width="*"/>
                    <DataGridTextColumn Header="f(x,y)" Binding="{Binding Path=F}"  IsReadOnly="True" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        

    </Grid>
</Window>
